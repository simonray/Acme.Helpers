@inject Microsoft.Framework.OptionsModel.IOptions<Acme.Helpers.Website.AppSettings> AppSettings

@{
    ViewBag.Title = "Package";
    ViewBag.Package = $"Acme.Helpers.Pager -Version {@AppSettings.Options.Version} -pre";
}

<div class="col-md-12">
    <h3>Acme.Helpers.Pager <small><span class="label label-default">@AppSettings.Options.Version</span></small></h3>
    <p>Contains:</p>
    <ul>
        <li><code>&lt;pager&gt;</code> - Customizable pager control</li>
        <li><code>&lt;infinite&gt;</code> - Ajax based infinate style pager</li>
    </ul>
    <h3>Installation</h3>
    <nuget-command package=@ViewBag.Package />

    <h3>Configuration</h3>
    Add the following to the <code>_ViewImports.cshtml</code> file.
<pre>
@@addTagHelper "*, Acme.Helpers.Pager"
@@using Acme.Helpers
</pre>

</div>
