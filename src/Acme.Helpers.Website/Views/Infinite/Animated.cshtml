@inject Microsoft.Framework.OptionsModel.IOptions<Acme.Helpers.Website.AppSettings> AppSettings
@model Acme.Helpers.Website.Models.IInfiniteList<Acme.Helpers.Website.Models.BasicPersonView>

@{
    ViewBag.Title = "Infinite - Animated";
}

<h3 id="basic">@ViewBag.Title</h3>
<p>An example showing the use of the infinite scroll and Jquery to provide animation during ajax loading.</p>

<!-- Tab Buttons -->
<ul id="tabstrip" class="nav nav-tabs" role="tablist">
    <li class="active"><a href="#Output" role="tab" data-toggle="tab">Output</a></li>
    <li><a href="#Source" role="tab" data-toggle="tab">Source</a></li>
</ul>

<!-- Tab Content Containers -->
<div class="tab-content">
    <div class="tab-pane fade in active" id="Output">
        <p>@await Html.PartialAsync("_Animated", @Model)</p>
    </div>
    <div class="tab-pane fade" id="Source">
        <code><small>Markup</small></code>
<pre class="prettyprint">
&lt;infinite id="anchor" class="btn-lg btn-success"&gt;
    &lt;i id="cogs" class="fa fa-cog"&gt;&lt;/i&gt; Load More? ({{Skip}}/{{Total}})
&lt;/infinite&gt;
</pre>
        <code><small>Script</small></code>
<pre class="prettyprint">
&lt;script&gt;
    $(document).ready(function () { AssignAnchorClick(); });
    $(document).ajaxComplete(function () { AssignAnchorClick(); });

    function AssignAnchorClick() {
        $("#anchor").click(function () {
            $("#cogs").removeClass()
            $("#cogs").addClass('fa fa-cog fa-spin');
        });
    }
&lt;/script&gt;
</pre>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () { AssignAnchorClick(); });
        $(document).ajaxComplete(function () { AssignAnchorClick(); });

        function AssignAnchorClick() {
            $("#anchor").click(function () {
                $("#cogs").removeClass()
                $("#cogs").addClass('fa fa-cog fa-spin');
            });
        }
    </script>
}

